{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
//    "jsx": "react-jsx",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true
  },
  "exclude": ["src/client", "node_modules"],
  "include": [
    "src/server"
  ]
}
